<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.smartdvor">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_custom_launcher"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_custom_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:windowSoftInputMode="adjustPan">
        <activity android:name=".ReportActivity"></activity>
        <activity android:name=".LibraryActivity" />
        <activity android:name=".EquipmentActivity" />
        <activity android:name=".GeneralActivity" />
        <activity android:name=".ProfileActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity" />
    </application>

</manifest>